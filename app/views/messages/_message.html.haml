.main-message__user-info{data: {message: {id: message.id}}}
  .main-message__user-info__username 
    = message.user.name
  .main-message__user-info__date-time
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main-message__message-box{data: {message: {id: message.id}}}
  - if message.body.present?
    = message.body
  = image_tag message.image.url, class: 'main-message__image' if message.image.present?